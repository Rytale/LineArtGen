{
  "name": "electron-auto-update",
  "version": "1.0.0",
  "description": "A simple Electron app with auto-update functionality",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-updater": "^6.1.1"
  },
  "devDependencies": {
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "@electron/asar": "^3.2.4",
    "@electron/osx-sign": "^1.0.4"
  },
  "build": {
    "appId": "com.example.electron-auto-update",
    "productName": "Electron Auto Update App",
    "publish": [{
      "provider": "github",
      "owner": "YOUR_GITHUB_USERNAME",
      "repo": "YOUR_GITHUB_REPO_NAME"
    }],
    "asar": true,
    "files": [
      "src/**/*",
      "index.html",
      "package.json"
    ]
  }
}
